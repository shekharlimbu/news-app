      <br/><br/><br/>
    <div class='container'>
    
        <% if (msgClass > 0) { %>
            <p class="okay"><%=msg%></p>
        <%} else { %>
            <p class="danger"><%=msg%></p>
            <% } %>
        
        <h3>Add new News</h3>
        <form action="/add-news" method="post">
            <div class='form-group'>
              <label>Title</label>
              <input type='text' class="form-control" value="" name="title" id="title"/>
            </div>
            <div class='form-group'>
              <label>Description</label>
              <input type='text' class="form-control" value="" name="description" id="description"/>
            </div>
            <div class='form-group'>
              <label>URL</label>
              <input type='text' class="form-control" value="" name="url" id="url"/>
            </div>
            <div class='form-group'>
              <label>URL to Image</label>
              <input type='text' class="form-control" value="" name="urlToImage" id="urlToImage"/>
            </div>
            <div class='form-group'>
              <label>Published At</label>
              <input type='text' class="form-control" value="" name="publishedAt" id="publishedAt"/>
            </div>
            <button type="submit">Add News</button>
        </form>
        <br>
    
        <h3>Current News</h3>
        <table class="table table-striped">
          <theadclass>
            <tr>
              <!-- <td><b>Object ID</b></td> -->
              <th scope="col"><b>Title</b></th>
              <th scope="col"><b>Description</b></th>
              <th scope="col"><b>URL</b></th>
              <th scope="col"><b>URL to Image</b></th>
              <th scope="col"><b>Published At</b></th>
              <th scope="col"><b>Date</b></th>
              <th scope="col"><b>Actions</b></th>
          </tr>
          </theadclass>
            
            <% for(var i=0; i < data.length; i++) { %>
               <tr>
                <!-- <td><%= data[i].id %></td>  -->
                <td><%= data[i].title %></td>
                <td><%= data[i].description %></td>
                <td><%= data[i].url %></td>
                <td><%= data[i].urlToImage %></td>
                <td><%= data[i].publishedAt %></td>
                <td><%= data[i]._time %></td>
                <td>
                  
                  <a type="button" class="btn btn-primary" href='/edit-news/<%= data[i].id %>'>Edit</a>
                <hr/>
                  <a type="button" class="btn btn-primary" href='/delete-news/<%= data[i].id %>'>Delete</a>
              
                </td>
               </tr>
            <% } %>
        </table>
    </div>

