      <br/><br/><br/>
    <div class='container'>
        <!-- when it's redirected from register after successful registration, we display in green -->
    <!-- when it's redirected from login itsel after unsuccessful login, we display in red -->
    <% if (msgClass > 0) { %>
        <p class="okay"><%=msg%></p>
    <%} else { %>
        <p class="danger"><%=msg%></p>
        <% } %>

    <h3>Login</h3>
    <form action="/login" method="post" id='login'>
        <p>
            <label>Username</label>
            <input value="" name="username" id="username" required/>
            <br/><br/>
    
            <label>Password</label>
            <input type="password" name="password" id="password" required/>
            <br/><br/>

            <button type="submit">Login</button>
        </p>
    </form>

    <h3>New User? Signup now!</h3>
    <a class="myButton" href="/register">Register</a>
    </div>

